global:
  scrape_interval: 15s

scrape_configs:
  - job_name: 'prometheus'
    static_configs:
      - targets: ["localhost:9100", "pve1.lan:9100", "pve2.lan:9100", "pve3.lan:9100"]

  - job_name: 'custom_pve_metrics'
    metrics_path: '/pve'
    static_configs:
      - targets: ['pve1.lan:9221', 'pve2.lan:9221', 'pve3.lan:9221']
